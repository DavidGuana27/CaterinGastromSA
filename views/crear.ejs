<%- include layouts/header.ejs %>
    <div class="row aling-items-center justify-content-center " style="margin-top: 50px; margin-bottom: 50px;">
        <div class="col-9 col-md-7 py-5 px-5 border rounded m-4 shadow">
            <form action="/empleados" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="">Nombre:</label>
                    <input type="text" name="nombre" id="nombre" class="form-control" placeholder=""
                        aria-describedby="helpId" />
                </div>
                <div class="form-group">
                    <label for="">Apellido:</label>
                    <input type="text" name="apellido" id="apellido" class="form-control" placeholder=""
                        aria-describedby="helpId" />
                </div>
                <div class="form-group">
                    <label for="">Rol:</label>
                    <input type="text" name="rol" id="rol" class="form-control" placeholder=""
                        aria-describedby="helpId" />
                </div>
                <div class="form-group">
                    <label for="">Categoria:</label>
                    <input type="text" name="categoria" id="categoria" class="form-control" placeholder=""
                        aria-describedby="helpId" style="text-transform:uppercase;" />
                </div>
                <div class="form-group">
                    <label for="">Foto:</label>
                    <input type="file" name="photo" id="photo" class="form-control" placeholder=""
                        aria-describedby="helpId" />
                </div>
                <div class="form-group">
                    <label for="">Horas Laboradas:</label>
                    <input type="number" name="horasLaboradas" id="horasLaboradas" class="form-control" placeholder=""
                        min="10" max="120" />
                </div>
                <br>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
        </div>
    </div>
    <%- include layouts/footer.ejs %>